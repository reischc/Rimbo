<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewReminder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@android:color/white"
        android:id="@+id/header"
        android:backgroundTint="#0d7acc">

        <ImageView
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/rimbo_schrift"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="673dp"
        android:layout_marginTop="58dp"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Name:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:hint="name..." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Date (dd.MM.YYYY):"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:hint="date..." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Zeit:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:hint="time..." />

        <CheckBox
            android:id="@+id/checkBoxLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="19dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:text="Location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Location:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <EditText
            android:id="@+id/txtLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:hint="location..."
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/checkBoxVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="18dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:text="Vehicle" />

        <RadioGroup
            android:id="@+id/radioButtonGroupVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonWalking"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:text="walking"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/radioButtonBicycle"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:text="bicycle"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/radioButtonAutomobile"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="automobile"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/radioButtonTrain"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="train"
                android:visibility="gone" />

        </RadioGroup>

        <CheckBox
            android:id="@+id/checkBoxImportance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="22dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:text="Importance" />

        <RadioGroup
            android:id="@+id/radioButtonGroupImportance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonNormal"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="normal"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/radioButtonImportant"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="important"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/radioButtonVeryImportant"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="very important"
                android:visibility="gone" />

        </RadioGroup>

        <CheckBox
            android:id="@+id/checkBoxTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="17dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:text="Timer" />

        <EditText
            android:id="@+id/txtTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:hint="timer..."
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="#ffffff"
                android:text="back"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                tools:ignore="MissingConstraints">
            </Button>

            <Button
                android:id="@+id/btnCreateReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#ffffff"
                android:text="create"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                tools:ignore="MissingConstraints">
            </Button>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>