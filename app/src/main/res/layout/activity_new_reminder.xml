<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewReminder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@android:color/holo_green_light">

        <ImageView
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:src="@drawable/rimbo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="673dp"
        android:layout_marginTop="58dp"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Name:"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name..."
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Datum (dd.MM.YYYY):"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Datum..."
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Zeit:"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/txtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zeit..."
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            />

        <CheckBox
            android:id="@+id/checkBoxLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:layout_gravity="left"
            android:layout_marginLeft="19dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Location:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone"
            />

        <EditText
            android:id="@+id/txtLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="name..."
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:visibility="gone"
            />

        <CheckBox
            android:id="@+id/checkBoxVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle"
            android:layout_gravity="left"
            android:layout_marginLeft="18dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            />

        <CheckBox
            android:id="@+id/checkBoxImportance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Importance"
            android:layout_gravity="left"
            android:layout_marginLeft="22dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            />

        <CheckBox
            android:id="@+id/checkBoxKind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kind of Reminder"
            android:layout_gravity="left"
            android:layout_marginLeft="28dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            />

        <Button
            android:id="@+id/btnCreateReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/holo_green_light"
            android:text="create"
            tools:ignore="MissingConstraints">

        </Button>

    </LinearLayout>

</RelativeLayout>