<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/relative_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@android:color/white"
        android:id="@+id/header"
        android:backgroundTint="#0d7acc">
        <ImageView
            android:id="@+id/placemaker"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        <ImageView
            android:id="@+id/logo"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:src="@drawable/rimbo_schrift"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/button_calendar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/calendar"
            android:stateListAnimator="@null"
            android:textColor="#ffffff" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/header">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today, 10.05.2020"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:textSize="25dp"
            android:textFontWeight="600"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingTop="20dp">
            <CheckBox
            android:id="@+id/item_switch_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:button="@null"
            app:buttonTint="#0d7acc"
            android:background="?android:attr/listChoiceIndicatorMultiple" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Erinnerung 1"
                android:textSize="20dp"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingTop="20dp">
            <CheckBox
                android:buttonTint="#000000"
                android:id="@+id/item_switch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:button="@null"
                android:background="?android:attr/listChoiceIndicatorMultiple" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Erinnerung 2"
                android:textSize="20dp"
                android:textColor="#000000" />
        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        app:itemTextColor="#000000"
        android:layout_alignParentBottom="true"
        app:backgroundTint="#f1f2f4"
        app:itemIconTint="@drawable/bottom_navigation_selector"
        app:labelVisibilityMode="unlabeled"
        app:itemIconSize="35dp" />
</RelativeLayout>
